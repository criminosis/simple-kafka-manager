                <groupId>org.moditect</groupId>
                <artifactId>moditect-maven-plugin</artifactId>
                <version>1.0.0.Beta2</version>
                <executions>
                    <execution>
                        <id>add-module-info-to-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>add-module-info</goal>
                        </goals>
                        <configuration>
                            <jvmVersion>11</jvmVersion>
                            <outputDirectory>${project.build.directory}/modules</outputDirectory>
                            <module>
                                <mainClass>com.criminosis.simple.kafka.manager.Main</mainClass>
                                <moduleInfo>
                                    <name>com.criminosis.simple.kafka.manager</name>
                                    <exports>
                                        com.criminosis.simple.kafka.manager to com.fasterxml.jackson.databind;
                                    </exports>
                                    <opens>com.criminosis.simple.kafka.manager to com.fasterxml.jackson.databind
                                    </opens>
                                </moduleInfo>
                            </module>
<!--                            <modules>-->
